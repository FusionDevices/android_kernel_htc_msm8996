[access]
	inheritFrom = All-Projects
[access "refs/*"]
	owner = group user/PureFusion-Gerrit
[access "refs/for/refs/*"]
	read = group user/PureFusion-Gerrit
	push = group user/PureFusion-Gerrit
	label-Code-Review = -2..+2 group user/PureFusion-Gerrit
	label-Verified = -1..+1 group user/PureFusion-Gerrit
	rebase = group user/PureFusion-Gerrit
	removeReviewer = group user/PureFusion-Gerrit
	submit = group user/PureFusion-Gerrit
[access "refs/heads/*"]
	read = group user/PureFusion-Gerrit
	create = group user/PureFusion-Gerrit
	push = +force group user/PureFusion-Gerrit
	pushMerge = group user/PureFusion-Gerrit
[access "refs/tags/*"]
	push = group user/PureFusion-Gerrit
	push = +force group user/PureFusion-Gerrit
[submit]
	action = rebase if necessary
